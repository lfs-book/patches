diff -Naur linux-2.6.1.orig/lib/propolice.c linux-2.6.1/lib/propolice.c
--- linux-2.6.1.orig/lib/propolice.c	1970-01-01 00:00:00.000000000 +0000
+++ linux-2.6.1/lib/propolice.c	2004-01-11 06:20:30.000000000 +0000
@@ -0,0 +1,13 @@
+ /*
+  *  linux/lib/errno.c
+  *
+  *
+  */
+ 
+ int __guard = '\0\0\n\777';
+ 
+ void __stack_smash_handler (int damaged, char func[])
+ 	 {
+	   static char *message = "propolice detects %x at function %s.\n" ;
+	   panic (message, damaged, func);
+}
